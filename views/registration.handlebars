<!DOCTYPE html>

<!--Pulling Awesome Font -->
<html>
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <head>
        <title>What's Up UCSD?</title>  
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <script src="js/jquery-1.11.0.js"></script>
        <script src="js/bootstrap.js"></script>
        <link rel="stylesheet" type="text/css" href="css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
        <link rel="stylesheet" type="text/css" href="css/bubbles.css">
    </head>
    <body>
        <div class="container-fluid" align="center">
            <!--- LOGIN STUFF HERE -->
            <div class="row">
                <div class="col-md-offset-5 col-md-3">
                    <div class="form-login">
                        <form action="/registration" method = "post">
                            <h4>Sign up for a new account!</h4>
                            First Name:
                            <input type="text" id="firstName" name="firstName" class="form-control input-sm chat-input" placeholder="First Name" required/>
                            </br>            
                            Last Name:
                            <input type="text" id="lastName" name="lastName" class="form-control input-sm chat-input" placeholder="Last Name" required/>
                            </br>                            
                            Email:
                            <input type="text" id="email" name="email" class="form-control input-sm chat-input" placeholder="Email" required/>
                            </br>
                            Username:
                            <input type="text" id="userName" name="userName" class="form-control input-sm chat-input" placeholder="username" required/>
                            </br>
                            Password:
                            <input type="password" id="userPassword" name="userPassword" class="form-control input-sm chat-input" placeholder="password" required/>
                            </br>
                            <div class="wrapper">
                                <span class="group-btn">     
                                    <button class="btn btn-primary btn-md" type="submit">Sign up! </span></button>
                                </span>
                            </div>
                        </form>
                    </div> 
                </div>
            </div>

            <div class="button-bar">
                <div class="button-col">
                    <a href="{{prevTopicPath}}">
                        <div class="bubble-button">
                            <span class="glyphicon glyphicon-arrow-left"></span>
                        </div>
                    </a>
                </div>
                <div class="button-col">
                    <a href="/">
                        <div class="bubble-button">
                            <span class="glyphicon glyphicon-home"></span>
                        </div>
                    </a>
                </div>
                <div class="button-col">
                    <a href="/login">
                        <div class="bubble-button">
                            <span class="glyphicon glyphicon-user"></span>
                        </div>
                    </a>
                </div>
                <div class="button-col">
                    <a href="{{currTopicPath}}newtopic">
                        <div class="bubble-button">
                            <span class="glyphicon glyphicon-plus"></span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </body>
</html>