<!doctype html>
<html>
	<head>
		<title>What's Up UCSD?</title>	
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		
		<script src="/js/jquery-1.11.0.js"></script>
		<script src="/js/bootstrap.js"></script>
		<script src="/js/bubbles.js"></script>
		<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
		<link rel="stylesheet" type="text/css" href="/css/bootstrap-theme.css">
		<link rel="stylesheet" type="text/css" href="/css/bubbles.css">
	</head>
	<body>
		<div class="container-fluid" align="center">
			<h1>What's Up With{{#each currTopicParams}} {{this}}{{/each}}?</h1>
			<div id="table-nav-tabs">
				<ul class="nav nav-tabs">
					<li><a href="/"> Home </a></li>
					<li><a href="/settings"> Settings </a></li>
					<li><a href="/login"> Login </a></li>
					<li><a href="{{currTopicPath}}newtopic"> Create New Topic </a></li>
					<li><a href="{{prevTopicPath}}"> Go Back to Previous Topic </a></li>
				</ul>
			</div>
			<div class="content">
				{{#each topics}}
					<div class="topic">
						<div class="title">
							<a href="{{../currTopicPath}}{{title}}"><h2>{{title}}<h2></a>
							<div class="modifier important">
								<span class="glyphicon glyphicon-plus"></span>
								<span class="badge">{{modifiers.important}}</span>
							</div>
							<div class="modifier agree">
								<span class="glyphicon glyphicon-thumbs-up"></span>
								<span class="badge">{{modifiers.agree}}</span>
							</div>
							<div class="modifier disagree">
								<span class="glyphicon glyphicon-thumbs-down"></span>
								<span class="badge">{{modifiers.disagree}}</span>
							</div>
							<div class="modifier unimportant">
								<span class="glyphicon glyphicon-remove-circle"></span>
								<span class="badge">{{modifiers.unimportant}}</span>
							</div>
							<div class="modifier love">
								<span class="glyphicon glyphicon-heart-empty"></span>
								<span class="badge">{{modifiers.love}}</span>
							</div>
						</div>
						{{#each topics}}
							<div class="subtopic">
								<div class="title">
									{{title}}
								</div>
							<span class="badge">{{modifiers.important}}</span>
							</div>
						{{/each}}
					</div>
				{{/each}}
			</div>
		</div>
	</body>
</html>